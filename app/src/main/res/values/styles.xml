<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

<!--    style for bookDetailTabLayout -->
    <style name="book_overview_text">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">@string/api_book_overview</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">7dp</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>

    <style name="book_detail">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">15sp</item>
        <item name="android:text">@string/api_get_book</item>
        <item name="android:gravity">start</item>
        <item name="android:textAlignment">gravity</item>
        <item name="android:layout_marginStart">15dp</item>
        <item name="android:layout_marginEnd">7dp</item>
        <item name="android:layout_marginTop">18dp</item>
    </style>

<!--    Global button style-->
    <style name="btnStyle" parent="@android:style/Widget.Button">
        <item name="android:background">@drawable/heart_off</item>
    </style>

</resources>